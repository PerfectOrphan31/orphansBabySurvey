extends ./layout/layout

block content_head
  h1 Welcome to the Results Page
block content_body
  .column
    .table
      table
        thead
          tr  
            th Name
            th Choice
        tbody
          each ans in answers
            tr
              td= ans.name
              td= ans.choice
  .column
    .ct-chart.ct-square
  
  script.
    let square = '75%';
    let options = {
      width : square,
      height : square,
      showLabel : false
    }
    let data = [0,0];
    let answers  = !{JSON.stringify(answers)};
      for (let i = 0; i < answers.length; i++){
        if(answers[i].choice === 'Boy'){
          data[0]++;
        }else if (answers[i].choice === 'Girl'){
          data[1]++;
        }
      }
      new Chartist.Pie('.ct-chart', {series: data}, options);
    